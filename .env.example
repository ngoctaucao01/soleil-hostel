# Docker Compose Environment Variables
# Copy this file to .env and update with your actual values

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=homestay
MYSQL_PASSWORD=your_secure_password_here

# Laravel Backend Configuration
APP_ENV=local
APP_DEBUG=false
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=homestay
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# API Configuration
API_URL=http://localhost:8000/api
FRONTEND_URL=http://localhost:5173

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173
SESSION_DOMAIN=localhost

# ========== SECURITY HEADERS CONFIGURATION ==========
# CSP (Content-Security-Policy) Reporting
CSP_REPORTING=false

# HSTS (Strict-Transport-Security) Preload
HSTS_PRELOAD=false
HSTS_MAX_AGE=63072000

# Vite Development Server (for CSP allow-list)
VITE_DEV_SERVER_HOST=localhost:5173

# Security headers in local environment (set to false to disable)
SECURITY_HEADERS_LOCAL=true
